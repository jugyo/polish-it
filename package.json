{
  "name": "polish-it",
  "displayName": "Polish It",
  "description": "Improve selected text or entire file using LLM",
  "version": "0.1.0",
  "publisher": "jugyo",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "polishIt.polish",
        "title": "Polish"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "polishIt.polish",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "polishIt.polish",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Polish It",
      "properties": {
        "polishIt.openai.apiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key"
        },
        "polishIt.openai.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "OpenAI model to use"
        },
        "polishIt.openai.baseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "OpenAI API base URL (for custom endpoints)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "vitest run",
    "test:watch": "vitest",
    "pretest": "npm run compile",
    "package": "vsce package",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.2.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "openai": "^4.73.0"
  }
}
